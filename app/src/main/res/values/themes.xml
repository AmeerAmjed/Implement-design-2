<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ImplementADesign2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primart_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primart_color</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="defualtTextStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="detailsStyle" parent="defualtTextStyle">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/fontSizeSubtitle1</item>
    </style>

    <style name="optionStyle" parent="defualtTextStyle">
        <item name="android:layout_marginTop">@dimen/spacingSmall</item>
        <item name="android:textColor">@color/gray_color</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/fontSizeSubtitle1</item>
    </style>

    <style name="titleStyle" parent="defualtTextStyle">
        <item name="android:paddingTop">@dimen/spacing</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/fontSizeCaption</item>
    </style>
    <style name="lightStyle" parent="defualtTextStyle">
        <item name="android:textColor">@color/gray_color</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/fontSizeCaption</item>
    </style>

    <style name="boldTextStyle" parent="">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="counter" parent="defualtTextStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingHorizontal">@dimen/spacingMedium</item>
    </style>

</resources>